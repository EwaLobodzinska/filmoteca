<html>
    <head>
        <title>Collection des films</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <style>
            /* General Styling */
            body {
                background-color: #f8f9fa; /* Light gray background for a clean look */
                font-family: Arial, sans-serif;
            }

            /* Header Styling */
            .header {
                background-color: #6f42c1; /* Dark gray */
                color: white;
                padding: 20px;
                text-align: center;
            }

            .header h1 {
                margin: 0;
                font-size: 2rem;
                font-weight: bold;
            }

            .header button {
                background-color: rgb(61, 69, 77); /* Bootstrap primary blue */
                border: none;
                color: white;
                padding: 8px 15px;
                border-radius: 5px;
                margin-top: 10px;
                cursor: pointer;
            }

            .header button:hover {
                background-color: rgb(43, 48, 54); /* Slightly darker blue on hover */
            }

            .header input[type="text"] {
                border: 1px solid #ced4da;
                border-radius: 5px;
                padding: 5px;
                margin-top: 10px;
                width: 200px;
            }

            /* Menu Styling */
            .menu {
                margin: 20px auto;
                max-width: 600px;
            }

            .menu ul {
                list-style-type: none;
                padding: 0;
            }

            .menu ul li {
                background-color: white; /* White background for menu items */
                margin: 5px 0;
                padding: 15px;
                border: 1px solid #dee2e6; /* Light gray border */
                border-radius: 5px;
                text-align: center;
                transition: background-color 0.3s;
            }

            .menu ul li:hover {
                background-color: #f1f1f1; /* Subtle hover effect */
            }

            .menu ul li a {
                color: #343a40; /* Dark gray text */
                text-decoration: none;
                font-size: 1rem;
                font-weight: bold;
            }

            .menu ul li a:hover {
                text-decoration: underline;
            }
        </style>
    </head>
    <body>
        <header class="header">
            <h1>MEDIATECA</h1>
            <button>Se connecter</button>
            <input type="text" placeholder="Search...">
        </header>
        <div class="menu">
            <ul>
                <li><a href="/films/list">Liste des films</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </div>
    </body>
</html>
